  </div>
</template>

<script>
export default {
  created() {},
  computed: {
    routerNav() {
      let menu = _.differenceBy(
        this.$router.options.routes,
        [{ name: "其他页面" }],
        "name"
      );

      return menu;
    },
  },
  methods: {
    oneNavTo(data) {
      if (data.alone) {
        let path = data.children[0].path;
        this.$router.push(path);
      }
    },
    routerTo(path) {
      this.$router.push(path);
    },
  },
};
</script>

